---
interface Props {
  artworks: any[];
}

const { artworks } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-3 4 gap-4">
  {artworks.map((item) => (
    <a href={`/gallery/${item.slug}`} class="block relative group overflow-hidden rounded-xl">
      <img
        class="w-full h-auto object-cover rounded-xl border border-white/10 transition-transform duration-300 group-hover:scale-105 min-h-[150px] max-h-48"
        src={item.data.image}
        alt={item.data.title}
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent flex flex-col justify-end p-3">
        <p class="text-warm-cream text-xs font-bold font-sans">{item.data.artist} - "{item.data.title}"</p>
      </div>
    </a>
  ))}
</div>
