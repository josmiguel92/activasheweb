---
interface Props {
  artworks: any[];
}

const { artworks } = Astro.props;
---

<div class="columns-2 gap-3 space-y-3">
  {artworks.map((item) => (
    <div class="relative group overflow-hidden rounded-xl">
      <img
        class="w-full h-auto object-cover rounded-xl border border-white/10"
        src={item.data.image}
        alt={item.data.title}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent flex flex-col justify-end p-3">
        <p class="text-warm-cream text-xs font-bold font-sans">{item.data.artist} - "{item.data.title}"</p>
      </div>
    </div>
  ))}
</div>
