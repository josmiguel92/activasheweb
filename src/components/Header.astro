---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<nav class="sticky top-0 z-50 px-6 py-5 bg-chocolate/80 backdrop-blur-xl backdrop-saturate-150 border-b border-white/10 shadow-lg">
  <div class="flex items-center justify-between mb-4">
    <span class="text-xl font-bold tracking-widest uppercase text-mustard font-display">ActivaShe</span>
    <a href={`mailto:${presentation.mail}`} class="text-sm hover:text-vibrant-orange transition-colors">
      <span class="material-symbols-outlined text-vibrant-orange">mail</span>
    </a>
  </div>
  <div class="flex items-center gap-6 text-sm font-semibold overflow-x-auto whitespace-nowrap pb-1 no-scrollbar">
    <a
      href="/"
      class:list={{
        ["text-vibrant-orange"]: pathname === "/",
        ["text-warm-cream/70 hover:text-vibrant-orange transition-colors"]: pathname !== "/",
      }}>Inicio</a
    >
    <a
      href="/posts"
      class:list={{
        ["text-vibrant-orange"]: pathname.startsWith("/posts"),
        ["text-warm-cream/70 hover:text-vibrant-orange transition-colors"]: !pathname.startsWith("/posts"),
      }}>Publicaciones</a
    >
    <a
      href="/projects"
      class:list={{
        ["text-vibrant-orange"]: pathname.startsWith("/projects"),
        ["text-warm-cream/70 hover:text-vibrant-orange transition-colors"]: !pathname.startsWith("/projects"),
      }}>Proyectos</a
    >
    <a
      href="/gallery"
      class:list={{
        ["text-vibrant-orange"]: pathname.startsWith("/gallery"),
        ["text-warm-cream/70 hover:text-vibrant-orange transition-colors"]: !pathname.startsWith("/gallery"),
      }}>Galer√≠a</a
    >
    <a
      href="/donate"
      class:list={{
        ["text-vibrant-orange"]: pathname === "/donate",
        ["text-warm-cream/70 hover:text-vibrant-orange transition-colors"]: pathname !== "/donate",
      }}>Donar</a
    >
  </div>
</nav>
