---
interface Props {
  title: string;
  artist: string;
  image: string;
  category: string;
}

const { title, artist, image, category } = Astro.props;
---

<div class="group relative overflow-hidden rounded-xl">
  <img
    class="h-auto w-full rounded-xl border border-white/10 object-cover"
    src={image}
    alt={title}
    loading="lazy"
  />
  <div
    class="absolute inset-0 flex flex-col justify-end bg-gradient-to-t from-black/80 via-transparent to-transparent p-3"
  >
    <p class="font-sans text-xs font-bold text-warm-cream">
      {artist} - "{title}"
    </p>
  </div>
</div>
