---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
  image?: string;
};

const { title, publishedAt, description, slug, image } = Astro.props;
---

<article
  class="card-shadow overflow-hidden rounded-3xl border-t-4 border-terracotta bg-white/5 text-chocolate"
>
  {
    image && (
      <div class="relative h-48 overflow-hidden">
        <img
          src={image}
          alt={title}
          class="h-full w-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-chocolate/80 to-transparent" />
      </div>
    )
  }
  <div class="p-6">
    <div class="mb-4 flex items-center justify-between">
      <span
        class="text-[10px] font-black uppercase tracking-widest text-terracotta"
        >Publicación</span
      >
      <span class="text-[10px] text-chocolate/40"
        >{formatDate(publishedAt)}</span
      >
    </div>
    <h3 class="mb-3 text-xl leading-snug text-terracotta">
      <a href={`/posts/${slug}`} class="hover:underline">
        {title}
      </a>
    </h3>
    <p class="mb-6 line-clamp-2 text-sm text-chocolate/60">{description}</p>
    <a
      class="flex items-center gap-2 text-sm font-bold text-vibrant-orange transition-all hover:gap-3"
      href={`/posts/${slug}`}
    >
      Leer artículo completo
      <span class="material-symbols-outlined text-sm">north_east</span>
    </a>
  </div>
</article>
