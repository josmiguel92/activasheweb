---
type Props = {
  title: string;
  areas?: string[];
  link: string;
  isComingSoon?: boolean;
  preview?: string;
  image?: string;
};

const { title, areas = [], link, isComingSoon, preview, image } = Astro.props as Props;

import StatusBadge from "@/components/StatusBadge.astro";

const formatAreas = (values: string[] = []) => values.join(" â€¢ ");
---

<>
  <div class="min-w-[280px] bg-white/5 rounded-[2rem] overflow-hidden border border-white/10 transition-transform hover:-translate-y-1">
    <div class="h-40 relative">
      {image ? (
        <>
          <img 
            src={image} 
            alt={title}
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-chocolate/80 to-transparent"></div>
        </>
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-terracotta/20 to-mustard/20"></div>
      )}
      <div class="absolute top-4 left-4 bg-chocolate/80 backdrop-blur px-3 py-1 rounded-full text-[10px] font-bold uppercase">
        {formatAreas(areas)}
      </div>
      {isComingSoon && (
        <div class="absolute top-4 right-4 bg-vibrant-orange px-3 py-1 rounded-full text-[10px] font-bold text-chocolate">
          NUEVO
        </div>
      )}
    </div>
    <div class="p-6">
      <h3 class="text-lg mb-2 text-warm-cream">{title}</h3>
      {preview && <p class="text-sm text-white/60 mb-4 line-clamp-2">{preview}</p>}
      <a 
        href={link}
        class="w-full py-3 rounded-xl border border-mustard text-mustard font-bold text-sm flex items-center justify-center gap-2 hover:bg-mustard/10 transition-colors"
      >
        Detalles del proyecto
        <span class="material-symbols-outlined text-sm">arrow_forward</span>
      </a>
    </div>
  </div>
</>
