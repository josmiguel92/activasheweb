---
interface Props {
  title: string;
  duration: string;
  category: string;
  youtubeId: string;
  thumbnail?: string;
}

const { title, duration, category, youtubeId, thumbnail } = Astro.props;
const thumbnailUrl =
  thumbnail || `https://img.youtube.com/vi/${youtubeId}/sddefault.jpg`;
---

<div class="flex flex-col gap-2">
  <div
    class="group relative aspect-video cursor-pointer overflow-hidden rounded-lg border border-terracotta/10 bg-cover bg-center"
  >
    <img
      src={thumbnailUrl}
      alt={title}
      class="h-full w-full object-cover"
      loading="lazy"
    />
    <div
      class="absolute inset-0 flex items-center justify-center bg-black/30 transition-colors group-hover:bg-black/40"
    >
      <span
        class="material-symbols-outlined text-white/90 transition-transform group-hover:scale-110"
        style="font-size: 24px;"
      >
        play_circle
      </span>
    </div>
    <div
      class="absolute bottom-1 right-1 rounded bg-black/70 px-1 text-[10px] text-white"
    >
      {duration}
    </div>
  </div>
  <div>
    <h4
      class="line-clamp-2 cursor-pointer text-xs font-bold leading-snug text-warm-cream transition-colors hover:text-vibrant-orange"
    >
      {title}
    </h4>
    <p class="mt-1 font-sans text-[10px] capitalize text-chocolate">
      {category.replace("-", " ")}
    </p>
  </div>
</div>
