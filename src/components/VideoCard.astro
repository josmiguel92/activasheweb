---
interface Props {
  title: string;
  duration: string;
  category: string;
  youtubeId: string;
  thumbnail?: string;
}

const { title, duration, category, youtubeId, thumbnail } = Astro.props;
const thumbnailUrl = thumbnail || `https://img.youtube.com/vi/${youtubeId}/sddefault.jpg`;
---

<div class="flex flex-col gap-2">
  <div class="relative aspect-video bg-cover bg-center rounded-lg border border-terracotta/10 overflow-hidden group cursor-pointer">
    <img
      src={thumbnailUrl}
      alt={title}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/30 flex items-center justify-center group-hover:bg-black/40 transition-colors">
      <span class="material-symbols-outlined text-white/90 group-hover:scale-110 transition-transform" style="font-size: 24px;">
        play_circle
      </span>
    </div>
    <div class="absolute bottom-1 right-1 bg-black/70 px-1 rounded text-[10px] text-white">{duration}</div>
  </div>
  <div>
    <h4 class="text-warm-cream font-bold text-xs line-clamp-2 leading-snug hover:text-vibrant-orange transition-colors cursor-pointer">
      {title}
    </h4>
    <p class="text-terracotta text-[10px] mt-1 font-sans capitalize">{category.replace("-", " ")}</p>
  </div>
</div>
