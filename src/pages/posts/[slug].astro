---
import { CollectionEntry, getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import ShareButtons from "@/components/ShareButtons.astro";
import formatDate from "@/utils/formatDate";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={`${post.data.title} | ActivaShe`}
  description={`${post.data.description ?? ""} — ActivaShe | Publicaciones`}
  image={post.data.image}
>
  <article class="mx-auto max-w-4xl px-6">
    <Breadcrumbs
      items={[
        { label: "Publicaciones", href: "/posts" },
        { label: post.data.title },
      ]}
      textColor="text-chocolate"
      mutedColor="text-chocolate/60"
      separatorColor="text-chocolate/30"
    />
    <header class="card-shadow mb-8 rounded-3xl bg-terracotta p-8">
      <div class="mb-4 flex items-center justify-between">
        <span
          class="text-[10px] font-black uppercase tracking-widest text-mustard"
          >Artículo</span
        >
        <span class="text-sm text-mustard"
          >{formatDate(post.data.publishedAt)}</span
        >
      </div>
      <h1 class="mb-4 font-display text-4xl leading-tight text-warm-cream">
        {post.data.title}
      </h1>
      <p class="text-lg italic text-warm-cream/90">{post.data.description}</p>
    </header>

    {
      post.data.image && (
        <div class="mb-8 overflow-hidden rounded-3xl">
          <img
            src={post.data.image}
            alt={post.data.title}
            class="h-80 w-full object-cover md:h-[26rem]"
            loading="lazy"
          />
        </div>
      )
    }

    <div class="post prose prose-lg mb-8 max-w-none text-chocolate">
      <Content />
    </div>

    <div class="mb-8 rounded-2xl border border-white/10 bg-white/5 p-6">
      <ShareButtons
        url={`/posts/${post.slug}`}
        title={post.data.title}
        description={post.data.description}
      />
    </div>

    <div class="mt-12 border-t border-white/10 pt-8">
      <a
        href="/posts"
        class="inline-flex items-center gap-2 text-sm font-bold text-vibrant-orange transition-all hover:gap-3"
      >
        <span class="material-symbols-outlined text-sm">arrow_back</span>
        Volver a publicaciones
      </a>
    </div>
  </article>
</Layout>
