---
import { CollectionEntry, getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import ShareButtons from "@/components/ShareButtons.astro";
import formatDate from "@/utils/formatDate";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="px-6 max-w-4xl mx-auto">
    <Breadcrumbs items={[
      { label: "Publicaciones", href: "/posts" },
      { label: post.data.title }
    ]} />
    <header class="mb-8 bg-terracotta p-8 rounded-3xl card-shadow">
      <div class="flex justify-between items-center mb-4">
        <span class="text-[10px] font-black uppercase tracking-widest text-mustard">Publicaci√≥n</span>
        <span class="text-sm text-warm-cream/60">{formatDate(post.data.publishedAt)}</span>
      </div>
      <h1 class="text-4xl font-display leading-tight mb-4 text-warm-cream">
        {post.data.title}
      </h1>
      <p class="text-lg text-warm-cream/90 italic">{post.data.description}</p>
    </header>

    <div class="post prose prose-invert prose-lg max-w-none mb-8">
      <Content />
    </div>

    <div class="mb-8 p-6 bg-white/5 rounded-2xl border border-white/10">
      <ShareButtons 
        url={`/posts/${post.slug}`}
        title={post.data.title}
        description={post.data.description}
      />
    </div>

    <div class="mt-12 pt-8 border-t border-white/10">
      <a href="/posts" class="inline-flex items-center gap-2 text-sm font-bold text-vibrant-orange hover:gap-3 transition-all">
        <span class="material-symbols-outlined text-sm">arrow_back</span>
        Volver a publicaciones
      </a>
    </div>
  </article>
</Layout>
