---
import Header from "../components/Header.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
  description?: string;
  noTopMargin?: boolean;
}

const { title, description, noTopMargin = false } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <SEOTags title={title} description={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,700;9..144,800&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
  
  
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4B1E6QKQQC"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-4B1E6QKQQC');
    </script>

  </head>

  <body class="min-h-screen">
    <Header />
    <main class:list={[!noTopMargin && "mt-8", "space-y-16 pb-20"]}>
      <slot />
    </main>
    <ScrollToTop />
    <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
  </body>
</html>
